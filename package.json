{
	"name": "hameslack",
	"scripts": {
		"start": "wp-env start",
		"update": "wp-env start --update",
		"stop": "wp-env stop",
		"env": "wp-env",
		"cli": "wp-env run cli wp",
		"cli:test": "wp-env run tests-cli wp",
		"package": "npm run build:css && npm run build:js && npm run dump",
		"watch": "npm-watch",
		"build:css": "sass ./src/scss/:./assets/css/ --style=compressed && postcss ./assets/css/*.css --use autoprefixer --replace",
		"build:js": "grab-deps js src/js assets/js",
		"dump": "grab-deps dump assets/js,assets/css",
		"composer": "wp-env run cli --env-cwd='wp-content/plugins/hameslack' composer",
		"test": "wp-env run tests-cli --env-cwd=wp-content/plugins/hameslack ./vendor/bin/phpunit",
		"lint": "npm run lint:css && npm run lint:js",
		"lint:css": "wp-scripts lint-style './src/scss/**/*.scss'",
		"lint:js": "wp-scripts lint-js './src/js/**/*.js'",
		"fix": "npm run fix:js && npm run fix:css",
		"fix:js": "wp-scripts lint-js --fix './src/js/**/*.js'",
		"fix:css": "wp-scripts lint-style --fix './src/scss/**/*.scss'",
		"tunnel": "cloudflared tunnel --url http://localhost:8888",
		"prepare": "husky"
	},
	"author": "Hametuha INC.",
	"license": "LGPL-3.0-or-later",
	"devDependencies": {
		"@kunoichi/grab-deps": "^3.0.0",
		"@wordpress/env": "^10.32.0",
		"@wordpress/scripts": "^30.0.0",
		"autoprefixer": "^10.4.19",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"npm-watch": "^0.13.0",
		"postcss": "^8.4.38",
		"postcss-cli": "^11.0.0",
		"sass": "^1.72.0"
	},
	"volta": {
		"node": "22.12.0"
	},
	"engines": {
		"node": ">=22.0"
	},
	"watch": {
		"build:css": {
			"patterns": ["src/scss"],
			"extensions": "scss"
		},
		"build:js": {
			"patterns": ["src/js"],
			"extensions": "js"
		}
	},
	"lint-staged": {
		"src/**/*.js": "npm run lint:js",
		"src/**/*.scss": "npm run lint:css",
		"*.php": "composer lint",
		"app/**/*.php": "composer lint"
	}
}
