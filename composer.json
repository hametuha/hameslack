{
    "name": "hametuha/hameslack",
	"description": "A simple slack integration for WordPress.",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "fumikito",
            "email": "guy@hametuha.com"
        }
    ],
	"scripts": {
		"test": "phpunit",
		"lint": "phpcs --standard=phpcs.ruleset.xml $(find ./ -name '*.php')",
		"fix": "phpcbf --standard=phpcs.ruleset.xml $(find ./ -name '*.php')"
	},
    "minimum-stability": "stable",
	"repositories":[
		{
			"type":"composer",
			"url":"https://wpackagist.org",
			"only": [
				"wpackagist-plugin/*",
				"wpackagist-theme/*"
			]
		}
	],
    "require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.0",
		"squizlabs/php_codesniffer": "^3.0",
		"wp-coding-standards/wpcs": "^3.1",
		"yoast/phpunit-polyfills": "^2.0",
		"phpcompatibility/php-compatibility": "^9.3",
		"wpackagist-plugin/gianism":"^6.0.0",
		"johnpbloch/wordpress": "6.8"
	},
    "autoload": {
        "psr-0": {
            "Hametuha\\HameSlack": "app"
        }
    },
	"extra": {
		"wordpress-install-dir": "wp",
		"installer-paths": {
			"vendor/plugins/{$name}/": [
				"type:wordpress-plugin"
			]
		}
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"johnpbloch/wordpress-core-installer": true
		}
	}
}
